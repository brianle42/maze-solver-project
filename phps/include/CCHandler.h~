#ifndef CCHANDLER_H
#define CCHANDLER_H

// Command Line I/O related headers
#include <cstddef>  // std::nullptr

// Image Processing (OpenCV) header
#include <opencv2/opencv.hpp>

struct CCPacket {
	cv::Mat	image;
};

static CCPacket CCPacketNull;

static bool IsNull(const CCPacket& test) 
{
	return &test == &CCPacketNull;
}

class CCHandler
{
	public:

		/** @brief Constructor.
		 */
		CCHandler( void );

		/** @brief Handler.
		 */
		CCPacket handle( 
			int 	argcData 	= 0, 
			char** 	argvData 	= NULL, 
			bool 	debugMode 	= false 
			) ;

		/** @brief Print and display the current state.
		 */
		void printState( bool debugMode = false );

	private:
		CCPacket state;

		bool debugMode;

		/** @brief Applies thresholding and dilation on an image.
		@param image 		Input  image.
		grayscale
		 */
		void tt(		
			);
};

#endif // CCHANDLER_H
