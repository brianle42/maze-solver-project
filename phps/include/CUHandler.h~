#ifndef CUHANDLER_H
#define CUHANDLER_H

#include <string>
// Include class-related definitions 
//	such as the struct CHPacket
#include "CHandler.h"



static CUPacket 	CUPacketNull		;

static bool IsNull( const CUPacket& test	)
{
	return &test == &CUPacketNull		;
}

class CUHandler
{
	public:

		/** @brief Constructor.
		 */
		CUHandler( void )		;

		/** @brief Handler.
		 */
		CUPacket handle(
			CHPacket senseData ,
			DDPacket nextState
			) ;

		/** @brief Print and display the current state.
		 */
		void printState( bool debugMode = false ) ;

	private:
		CUPacket state			;

		bool debugMode			;


		CUPacket commandUp			;
		CUPacket commandDown		;

		/** @brief Applies thresholding and dilation on an image.
		@param image 		Input  image.
		grayscale
		 */
		void tt(		
			);
};

#endif // CUHANDLER_H
